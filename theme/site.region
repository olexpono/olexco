<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,maximum-scale=1">

    {squarespace-headers}

    <squarespace:script src="site.js" combo="true" />
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <header class="left-nav">

      {.section website}

        <h1 data-content-field="site-title">
          <a href="/">
            <img class="top-logo" src="{logoImageUrl}?format=original" fallback="/assets/logo.png" alt="{siteTitle}" />
          </a>
        </h1>


      {.end}
      <div class="troll-quote">
        <blockquote>The more clearly we can focus our attention on the wonders and realities of the universe about us, the less taste we shall have for destruction.</blockquote>
        <div class="source">Rachel Carson</div>
      </div>
      <squarespace:navigation navigationId="mainNav" template="navigation" />
    </header>


    <section class="content">
      {squarespace.main-content}
    </section>

    <footer class="main-footer">
      <p>&copy;2012-2013 Olex Ponomarenko</p>
    </footer>

    {squarespace-footers}
  </body>
</html>
